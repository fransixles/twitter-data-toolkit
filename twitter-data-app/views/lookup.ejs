<% include ./partials/header.ejs %>

  <body>
    <div class="container">

      <div style="padding: 40px;" class="display-4 text-center">
        User Lookup Aggregator (v2 Beta)
      </div>

      <form action="/lookup" method="POST">
        <div class="form-group">
          <label for="publicKey">Token</label>
          <input type="text" class="form-control" name="token" />
          <small id="publicKeyHelp" class="form-text text-muted">Enter your bearer token (found under the 'Project & Apps' tab).</small>
        </div>
        <div class="form-group">
          <label for="privateKey">Endpoint</label>
          <input type="text" class="form-control" name="endpoint"  value="https://api.twitter.com/2/users/" />
          <!-- <small id="publicKeyHelp" class="form-text text-muted">Leave as is.</small> -->
        </div>
        <div class="form-group">
          <label for="privateKey">Max Requests</label>
          <input type="text" class="form-control" name="maxRequests" value="10"/>
          <small id="publicKeyHelp" class="form-text text-muted">Enter an uppper limit for how many requests are utilised.</small>
        </div>
        <div class="form-group">
            <label for="privateKey">Max Results</label>
            <input type="text" class="form-control" name="maxResults" value="1000"/>
            <small id="publicKeyHelp" class="form-text text-muted">Enter total results to be returned.</small>
          </div>
          <div class="form-group">
            <label for="privateKey">ID</label>
            <input type="text" class="form-control" name="id" value=""/>
            <small id="publicKeyHelp" class="form-text text-muted">Enter ID to be searched.</small>
          </div>
        <input
          class="btn btn-primary"
          type="submit"
          name="submit"
          value="Submit"
        />      
      </form>
    </div>
  </body>
</html>